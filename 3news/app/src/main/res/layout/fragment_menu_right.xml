<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_slidingmenu_left"
    android:orientation="vertical"
    android:id="@+id/ll_unlogin">

    <ImageView
        android:id="@+id/iv_right"
        android:layout_weight="2.8"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/biz_pc_main_info_profile_avatar_bg_dark"
        />
    <TextView
        android:id="@+id/tv_right1"
        android:layout_weight="2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="立刻登录"
        android:textSize="25dp"
        android:layout_margin="15dp"
        android:textColor="#FFFFFF"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/tv_right2"
        android:layout_weight="3.3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="更新版本"
        android:gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:textSize="15dp"/>
    <LinearLayout
        android:layout_weight="2.8"
        android:layout_width="150dp"
        android:layout_height="fill_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity=""
            android:src="@drawable/fun_share_weixin"/>
        <ImageView
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/addimport_qq"/>
        <ImageView
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/fun_share_friends"/>
        <ImageView
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/fun_share_weibo"/>
    </LinearLayout>

</LinearLayout>
